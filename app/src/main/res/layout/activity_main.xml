<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/normal_padding"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/card_background"
    >
        <ImageView
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/normal_margin"
            android:src="@drawable/image" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/normal_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:layout_marginBottom="@dimen/extra_small_margin"
            android:text="Ahmed Hassan"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_medium"
            android:layout_marginBottom="@dimen/extra_small_margin"
            android:text="Engineer"
            android:textSize="@dimen/small_text_size" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/extra_small_margin"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon"
                android:layout_marginEnd="@dimen/double_extra_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"

                android:text="UK" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:text="(150 Reviews)"

                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/double_extra_small_margin"
                android:layout_marginEnd="@dimen/double_extra_small_margin"
                android:fontFamily="@font/dm_sans"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/star_4"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end"
        android:paddingTop="@dimen/normal_padding"
        android:paddingEnd="@dimen/extra_small_padding"
        >

        <TextView
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/extra_small_padding"
            android:background="@drawable/chip"
            android:fontFamily="@font/dm_sans"
            android:gravity="center"
            android:padding="@dimen/tripple_extra_small_padding"
            android:paddingBottom="@dimen/extra_small_padding"
            android:text="3 hr"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_medium"
            android:paddingBottom="@dimen/extra_small_padding"
            android:text="Russian"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:paddingBottom="@dimen/small_padding"
            android:text="5 Days ago"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

</LinearLayout>

</LinearLayout>